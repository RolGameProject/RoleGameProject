{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
            "distDir": "build"
        }
      },
      {
        "src": "server/api/index.js",
        "use": "@vercel/node"   
      }
    ],
  "rewrites": [
    {
      "source": "/api/(.*)",      
      "destination": "/server/api/index.js"         
    },
    {
      "source": "/(.*)",         
      "destination": "/$1"     
    }
    ]
  }
