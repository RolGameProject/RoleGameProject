{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
            "distDir": "build"
        }
      },
      {
        "src": "server/api/index.js",
        "use": "@vercel/node"   
      }
    ],
  "routes": [
    {
      "src": "^/api/(.*)",      
      "dest": "/server/api/$1"  
    },
    {
      "src": "^/(login|dashboard|game-room)(/.*)?", 
      "dest": "/client/index.html" 
    },
    {
      "src": "^/(.*)",         
      "dest": "/client/index.html" 
    }
  ]
  }
