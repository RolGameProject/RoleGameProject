{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",      
      "dest": "/server/api/index.js" 
    }
  ],
  "rewrites": [
    {
      "source": "/(login|dashboard|game-room)",         
      "destination": "/client/index.html"
    },
    {
      "source": "/(.*)", 
      "destination": "/client/$1"
    }
  ]
}
